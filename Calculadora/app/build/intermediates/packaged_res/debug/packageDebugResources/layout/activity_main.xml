<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant40"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/calculadora_basica"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="Resultado: "
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtnumero1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:hint="Ingresa el primer numero: " />

    <EditText
        android:id="@+id/txtnumero2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:hint="Ingresa el segundo numero: " />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/BtnSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:onClick="onClick"
        android:text="+"
        android:textSize="60dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:onClick="onClick"
        android:text="-"
        android:textSize="60dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnMultiplica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:onClick="onClick"
        android:text="x"
        android:textSize="60dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:onClick="onClick"
        android:text="รท"
        android:textSize="60dp"
        android:textStyle="bold" />


</LinearLayout>