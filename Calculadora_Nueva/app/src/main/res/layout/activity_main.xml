<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CALCULADORA"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@color/white" />

    <EditText
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:hint="Ingresa el primer numero: "

        />

    <EditText
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:hint="Ingresa el segundo numero: " />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:onClick="onClick"
            android:text="+"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn_resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/btn_suma"
            android:layout_toRightOf="@+id/btn_suma"
            android:onClick="onClick"
            android:text="-"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn_multiplica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/btn_resta"
            android:layout_toRightOf="@+id/btn_resta"
            android:onClick="onClick"
            android:text="X"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_multiplica"
            android:layout_toRightOf="@+id/btn_multiplica"
            android:onClick="onClick"
            android:text="/"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="OnClick" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtresultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="El resultado es : "
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        />

</LinearLayout>






